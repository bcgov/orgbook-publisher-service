{% extends('layouts/base.min.jinja') %}
{% block page %}
<div class="container container-normal py-4">
    <div class="container-tight">
        {% include('components/brand.jinja') %}
        <div class="card card-md">
            <form method="post">
                <div class="card-body">
                    <h2 class="h2 text-center">Orgbook Publisher Administration</h2>
                        {{ form_login.csrf_token }}
                        <div class="mb-3">
                            {{ form_login.tenant_id.label(class="form-label") }}
                            <div>
                                {{ form_login.tenant_id(class="form-control") }}
                                {# <small class="form-hint">We'll never share your email with anyone else.</small> #}
                            </div>
                        </div>
                        <div class="mb-3">
                            {{ form_login.api_key.label(class="form-label") }}
                            <div>
                                {{ form_login.api_key(class="form-control") }}
                                {# <small class="form-hint">We'll never share your email with anyone else.</small> #}
                            </div>
                        </div>
                </div>
                <div class="card-footer">
                    {{ form_login.submit(class="btn btn-primary w-100") }}
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}