<div class="modal modal-blur fade" id="modal-offer-credential" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <form method="post">
                {{ form_credential_offer.csrf_token }}
                <div class="modal-header">
                    <h5 class="modal-title">Offer Auth Credential</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        {{ form_credential_offer.email.label(class="form-label") }}
                        {{ form_credential_offer.email(class="form-control") }}
                    </div>
                    <div class="mb-3">
                        {{ form_credential_offer.issuer.label(class="form-label") }}
                        {{ form_credential_offer.issuer(class="form-select") }}
                    </div>
                    {# <div class="mb-3">
                        {{ form_credential_offer.expiration.label(class="form-label") }}
                        {{ form_credential_offer.expiration(class="form-control") }}
                    </div> #}
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-link link-secondary btn-3" data-bs-dismiss="modal">
                        Cancel
                    </a>
                    {{ form_credential_offer.submit(class="btn btn-primary btn-5 ms-auto") }}
                </div>
            </form>
        </div>
    </div>
</div>